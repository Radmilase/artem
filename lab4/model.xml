            <geom name="C_geom" type="cylinder" size=".01" rgba="1 0.5 0.5 0.5" fromto="0 .005 0  0 -.005 0" />
        </body>       -->

        <site name="O_site_fix" pos="0 0 0"/>

        <site name="C_site_fix" pos="0.136 0 0"/>

    </worldbody>

    <actuator>
        <position name="D_actuator" joint="D_joint" />
    </actuator>

    <equality>
        <connect site1="O_site_fix" site2="O_site"/>
        <connect site1="C_site_fix" site2="C_site"/>
    </equality>

</mujoco>