<mujoco model="model">
    <visual>
        <headlight ambient="0.5 0.5 0.5" />
    </visual>

    <option gravity="0 0 -9.81" />

    <worldbody>

        <body pos="0 0 0" name='main_body'>
            <body pos="0.272 0 0.272" name = 'D_body'>
                <joint name='D_joint' type ='slide' axis='1 0 0'/>

                <geom name = 'D_geom' type="box" size="0.05 0.01 0.015" rgba="0.5 1 1 0.5"/>

                <body pos="0 0 0" name = 'L2_body'>
                    <joint name='L2_joint' type='hinge' axis='0 1 0' pos="0 0 0"/>

                    <geom name="L2_geom" type="capsule" size=".001" rgba="0.5 0.5 0.5 1" fromto="0 0 0  -0.272 0 -0.204"/>   
                    
                    <body pos="-0.272 0 -0.204" name = 'A_body'>
                        <joint/>

                        <geom name="A_geom" type="cylinder" size=".01" rgba="1 0.5 0.5 0.5" fromto="0 .005 0  0 -.005 0" />

                        <body pos="0 0 0" name = 'L1_body'>
                            <joint name='L1_joint' type='hinge' axis='0 1 0' pos="0 0 0"/>

                            <geom name="L1_geom" type="capsule" size=".001" rgba="0.5 0.5 0.5 1" fromto="0 0 0  0 0 -0.068" />

                            <site name="O_site" pos="0 0 -0.068"/>
                        </body>  
                    </body>             

                    <body pos="-0.136 0 -0.102" name = 'B_body'>
                        <joint/>

                        <geom name="B_geom" type="cylinder" size=".01" rgba="1 0.5 0.5 0.5" fromto="0 .005 0  0 -.005 0" />

                        <body pos="0 0 0" name = 'L3_body'>
                            <joint name='L3_joint' type='hinge' axis='0 1 0' pos="0 0 0"/>

                            <geom name="L3_geom" type="capsule" size=".001" rgba="0.5 0.5 0.5 1" fromto="0 0 0  0 0 -0.17" />
                            
                            <site name="C_site" pos="0 0 -0.17"/>
                        </body>                          
                    </body>          
                </body>

            </body>

        </body>

